{
  "root": true,
  "extends": "eslint-config-airbnb",
  "env": {
    "browser": true,
    "es6": true
  },
   "parserOptions": {
        "ecmaVersion": 6,
        "sourceType": "module",
        "ecmaFeatures": {
            "jsx": true
        }
  },
  "rules": {
    "react/jsx-uses-react": 2,
    "react/jsx-uses-vars": 2,
    "react/react-in-jsx-scope": 2,
    "react/jsx-indent": ["error", 4],
    "no-console": 0,
    "indent": ["error", 4],
    "comma-dangle" : 0,
    "prefer-template": 1,
    "padded-blocks": 0,
    "max-len": 0,
    "jsx-a11y/img-has-alt": 0
  },
  "plugins": [
    "react"
  ]
}
